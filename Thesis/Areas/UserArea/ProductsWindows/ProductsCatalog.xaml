<Window x:Class="Thesis.Areas.UserArea.ProductsWindows.ProductsCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ProductsCatalog" WindowStyle="None" Height="1080" Width="1920" 
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="Button" x:Key="upperButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#99FFFFFF" />
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="2,2,2,2" BorderBrush="Transparent" BorderThickness="2" Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Background.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="947.5,1992" StartPoint="947.5,0" MappingMode="Absolute">
                <GradientStop Color="#FF141111" Offset="1"/>
                <GradientStop Color="#FF553D19"/>
                <GradientStop Color="#FF181311" Offset="0.466"/>
                <GradientStop Color="#FF261C12" Offset="0.313"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="444"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
              HorizontalAlignment="Center" VerticalAlignment="Center" Width="1200" Height="44" Margin="356,28" >
            <StackPanel>
                <Border Background="#4CFFFFFF" Height="45" CornerRadius="23">
                    <TextBox Foreground="White" Padding="0,15,50,0" Margin="25,0,25,0"
                             TextWrapping="Wrap" materialDesign:HintAssist.Hint="Поиск" x:Name="textSearch" 
                             FontFamily="Arial Black" TextChanged="Sherch"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <ListView  x:Name="_productList" Margin="50,5,450,150"
                       ScrollViewer.CanContentScroll="False" 
                       SelectionChanged="ProductDescription">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="ListBoxItem.Margin" Value="5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" 
                                        Width="900" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                                        <Grid>
                                            <Grid.Triggers>
                                                <EventTrigger RoutedEvent="DockPanel.MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                                         Storyboard.TargetName="Blure"
                                                                         From="0.0" To="1.0" Duration="0:0:0.3"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="DockPanel.MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                                         Storyboard.TargetName="Blure" 
                                                                         From="1.0" To="0" Duration="0:0:0.3"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Grid.Triggers>
                                            <Border Width="250" HorizontalAlignment="Left" Background="Black"
                                                CornerRadius="10" BorderThickness="3">
                                                <Image Source="{Binding ProductImage}" Margin="5"/>
                                            </Border>
                                            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0">
                                                <Label Content="{Binding Name}" FontSize="30" 
                                                   FontFamily="Calibri" FontWeight="Bold" 
                                                   Foreground="Black" Margin="10">
                                                </Label>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                        HorizontalAlignment="Left" Margin="10">
                                                    <Label Content="Код продукта: " FontWeight="Bold"
                                                       FontSize="25" Foreground="Black" 
                                                       FontFamily="Calibri">
                                                    </Label>
                                                    <Label Content="{Binding ProductCode}" FontWeight="Bold"
                                                       FontSize="25" Foreground="Black" 
                                                       FontFamily="Calibri">
                                                    </Label>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                        HorizontalAlignment="Left" Margin="10">
                                                    <Label Content="Цена: " FontWeight="Bold"
                                                       FontSize="25" Foreground="Black" 
                                                       FontFamily="Calibri">
                                                    </Label>
                                                    <Label Content="{Binding Price}" FontWeight="Bold"
                                                       FontSize="25" Foreground="Black" 
                                                       FontFamily="Calibri">
                                                    </Label>
                                                </StackPanel>
                                            </StackPanel>
                                            <Border CornerRadius="2.5" VerticalAlignment="Bottom" Margin="0,0,10,20"
                                                HorizontalAlignment="Right" Background="#FFFBBB43">
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Label Content="Количество: " FontWeight="Bold"
                                                           FontSize="22" Foreground="Black" 
                                                           FontFamily="Calibri" VerticalAlignment="Bottom" 
                                                           HorizontalAlignment="Right">
                                                        </Label>
                                                        <Label Content="{Binding CountOnStorage}" FontWeight="Bold"
                                                           FontSize="22" Foreground="Black" 
                                                           FontFamily="Calibri" VerticalAlignment="Bottom" 
                                                           HorizontalAlignment="Right">
                                                        </Label>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <Border Background="#4C000000" BorderThickness="2" CornerRadius="5"
                                                Visibility="Visible" Opacity="0" Name="Blure"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical" Margin="20"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <StackPanel Orientation="Horizontal"  Margin="0,0,400,110"
                        VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Button Content="хочу еще 10" Click="AddProducts"/>
                <Label/>
                <Button/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Grid Width="700" HorizontalAlignment="Left" Height="1"
                                  Background="#3FFFFFFF" Margin="150,0,0,0"/>
                <Button Style="{StaticResource upperButton}" Margin="20,0,0,0" HorizontalAlignment="Center"
                                 Content="Корзина" Click="Basket" Height="30" VerticalAlignment="Top"/>
                <Grid Width="700" HorizontalAlignment="Left" Height="1"
                                  Background="#3FFFFFFF" Margin="20,0,100,0"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0">
            <StackPanel Margin="5">
                <StackPanel Margin="0,20,0,20" Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Label Content="Материал: " FontSize="22" Margin="0,0,10,0" Foreground="White"/>
                    <ComboBox Foreground="Black" Text="Выбор материала" 
                              DisplayMemberPath="MaterialName" FontSize="22"
                              x:Name="_material" Width="260" SelectionChanged="ChangeValueComboBox"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,20" Orientation="Horizontal"
                            VerticalAlignment="Center" >
                    <Label Content="Пол: " FontSize="22" 
                           Margin="0,0,70,0" Foreground="White"/>
                    <ComboBox Foreground="Black" Text="Выбор материала" 
                              DisplayMemberPath="SexName" FontSize="22"
                              x:Name="_sex" Width="260" SelectionChanged="ChangeValueComboBox"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,20" Orientation="Horizontal"
                            VerticalAlignment="Center" >
                    <Label Content="Сезон: " FontSize="22"
                           Foreground="White" Margin="0,0,50,0"/>
                    <ComboBox Foreground="Black" Text="Выбор материала" 
                              DisplayMemberPath="SeasonName" FontSize="22"
                              x:Name="_season" Width="260"
                              SelectionChanged="ChangeValueComboBox"/>
                </StackPanel>

                <StackPanel Margin="0,20,0,20" Orientation="Horizontal"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Сортировка по названию: " Foreground="White"
                           FontSize="22" HorizontalAlignment="Center"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox Foreground="White" IsChecked="False" x:Name="_name"
                              Margin="15,0,0,0" Checked="NameSort"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,20" Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" >
                    <Label Content="Сортировка по количеству: " Foreground="White"
                           FontSize="22" Margin="0,0,10,0"/>
                    <CheckBox Foreground="White" IsChecked="False" x:Name ="_count"
                              Checked="CountSort"/>
                </StackPanel>
                <StackPanel Margin="0,20,0,20" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Label Content="Сортировка по дате: " FontSize="22" 
                           Foreground="White" Margin="0,0,10,0"/>
                    <CheckBox Foreground="White" IsChecked="False" x:Name="_date"
                              Margin="70,0,0,0" Checked="DateSort" />
                </StackPanel>
                <StackPanel Margin="0,20,0,20" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Label Content="Сортировка по цене: " FontSize="22" 
                           Foreground="White" Margin="0,0,10,0"/>
                    <CheckBox Foreground="White" IsChecked="False" x:Name="_cost"
                              Margin="70,0,0,0" Checked="CostSort" />
                </StackPanel>
                <StackPanel Margin="0,20,0,20" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Button Content="Сбросить" Foreground="Black" Margin="10"
                            FontSize="22" Height="50"  Click="DropSettings"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
