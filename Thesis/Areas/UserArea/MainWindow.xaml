                                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                            <Label Content="{Binding ProductCode}" HorizontalAlignment="Left"
                                                   FontFamily="Calibri" FontSize="15" 
                                                   FontWeight="Bold" Foreground="White"/>
                                            <Label Content="{Binding Name}" HorizontalAlignment="Left"
                                                   FontFamily="Calibri" FontSize="15" 
                                                   FontWeight="Bold" Foreground="White"/>
                                            <Label Content ="{Binding Price}" HorizontalAlignment="Left" 
                                                   Margin="0,0,0,10" FontFamily="Calibri"
                                                   FontSize="15" Background="Transparent"
                                                   BorderBrush="#FFED9A9A" Foreground="White"/>
                                        </StackPanel>
                                        <Border CornerRadius="2.5" VerticalAlignment="Bottom" Margin="0,0,10,20"
                                                HorizontalAlignment="Right" Background="#FFFBBB43">
                                            <Label x:Name ="InStock" FontWeight="Bold" Foreground="Black"/>
                                        </Border>
                                        <Border CornerRadius="20" Background="#4C000000" 
                                                Visibility="Visible" Name="Blure" Opacity="0">
                                            <DockPanel LastChildFill="True">
                                                <Button Style="{DynamicResource heart}" Width="40" VerticalAlignment="Top" 
                                                        HorizontalAlignment="Right" Margin="10,10,0,0" Height="40" 
                                                        Click="AddToBasket" x:Name ="AddBasket_1"/>
                                                <Button Style="{DynamicResource ProductView}" VerticalAlignment="Center" 
                                                        Width="50" Margin="-45,-20,0,0" Height="50" 
                                                        Click="ProductDescription" Content = "{Binding Id}"/>
                                            </DockPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Margin="20"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <Button Style="{StaticResource a}" Content="Aккаунт" Background="Transparent"
                FontSize="40" FontWeight="Bold" HorizontalAlignment="Right" 
                Margin="0,120,10,0" Grid.Column="2" Grid.Row="1" Height="61" 
                VerticalAlignment="Top" Width="202" Click="AccountShow"/>
        <Button Content="EXIT" Background="Transparent" FontSize="40" 
                FontWeight="Bold" Margin="0,60,10,0" Height="55" Grid.Row="1"
                Style="{StaticResource a}" HorizontalAlignment="Right" Grid.Column="2"
                VerticalAlignment="Top" Width="138" Click="Exit"/>
        <Button Content="Администратор" Background="Transparent" Width="320" 
                FontSize="40" Grid.Row="1" FontWeight="Bold" Style="{StaticResource a}" 
                HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="10,60,0,0" VerticalAlignment="Top" Click="AdminArea" 
                Height="55" x:Name="adminstrationButton"/>
        <Button Content="Аптечка" Background="Transparent" FontSize="40" FontWeight="Bold" Grid.Column="0"
                Style="{StaticResource a}" HorizontalAlignment="Left" Margin="10,120,0,0" Grid.Row="1"
                VerticalAlignment="Top" Width="250" Click="Help" Height="55"/>
    </Grid>
</Window>
