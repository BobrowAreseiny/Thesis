<Window x:Class="Thesis.Areas.MarketingArea.MainMarketingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainMarketingWindow"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush MappingMode="Absolute" RadiusY="500" RadiusX="1500">
                <RadialGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                        <RotateTransform CenterY="0.5" CenterX="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </RadialGradientBrush.RelativeTransform>
                <GradientStop Color="#FF3C2220" Offset="0"/>
                <GradientStop Color="#FF181335" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Frame x:Name="dataView" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
